<header>Tempalate with only Title</header>
<fieldset>
	<section>
		<label class="label">Title</label>
		<label class="input">
			#if($slide.getTitle() )
			<input type="text" name="title" placeholder=" Please enter title" value="$slide.getTitle()">
			#else 
			<input type="text" name="title" placeholder=" Please enter title" >
			#end			
		</label>
	</section>
	
	
	<section>
		<label class="label">Image URL </label>
		<label class="select" >
			<select name="image_url" id="image-picker">
				#foreach ($image in $images)
					<option data-img-src="$image.getUrl()" value="$image.getId()">$image.getTitle()</option>
				#end
			</select>
		</label>
	</section>
							
							
	
</fieldset>
